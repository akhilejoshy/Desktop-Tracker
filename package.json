{
  "name": "cloudhouse",
  "private": true,
  "version": "0.1.12",
  "author": "CloudHouse Technologies <cloudhouse@cloudstick.io>",
  "description": "CloudHouse Agent for automation and system monitoring",
  "homepage": "https://api.cloudhousetechnologies.com",
  "type": "module",
  "main": "electron/app.js",
  "scripts": {
    "start": "concurrently \"npm run start-react\" \"npm run start-electron\"",
    "dev": "vite",
    "start-react": "npm run dev",
    "start-electron": "wait-on tcp:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron --no-sandbox --disable-gpu --ozone-platform=x11 electron/app.js",
    "build-react": "vite build",
    "dist": "npm run build-react && electron-builder",
    "upload": "node scripts/upload.js",
    "release": "npm run dist && npm run upload"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-menubar": "^1.1.6",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@reduxjs/toolkit": "^2.9.2",
    "aws-sdk": "^2.1692.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.545.0",
    "react": "^19.1.1",
    "react-day-picker": "^9.11.1",
    "react-dom": "^19.1.1",
    "react-hot-toast": "^2.6.0",
    "react-image": "^4.1.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.9.4",
    "robotjs": "^0.6.0",
    "tailwind-merge": "^3.3.1",
    "uiohook-napi": "^1.5.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@tailwindcss/vite": "^4.1.14",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "vite": "^7.1.7",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.myapp.agent",
    "productName": "CloudHouse Agent",
    "publish": {
      "provider": "generic",
      "url": "https://cloudhouse.in-maa-1.linodeobjects.com/agent-application/"
    },
    "files": [
      "electron/**/*",
      "node_modules/**/*",
      "dist/**/*",
      "icon.ico",
      "icon.png",
      "icon.icns"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "icon.png"
    },
    "deb": {
      "depends": [
        "scrot"
      ]
    }
  }
}